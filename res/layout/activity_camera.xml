<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_top_nav"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_nav_left"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:src="@mipmap/ic_back_left"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_mobile_portrait"
            android:padding="5dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/mobile_portrait"
            android:layout_toRightOf="@+id/iv_nav_left"
            android:layout_centerVertical="true"
            android:onClick="onClick"/>
        <TextView
            android:textSize="@dimen/app_nav_text_size"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_nav_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/iv_nav_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/menu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_lock"
            android:padding="5dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@mipmap/lock"
            android:layout_toLeftOf="@+id/iv_nav_right"
            android:layout_centerVertical="true"
            android:onClick="onClick"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_label"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_top_nav">
        <TextView
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_black_head"
            android:background="@drawable/label_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/black_head"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <TextView
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_ear"
            android:background="@drawable/label_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/ear"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <TextView
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_mouth"
            android:background="@drawable/label_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/mouth"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <TextView
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_tooth"
            android:background="@drawable/label_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/tooth"
            android:layout_weight="1"
            android:onClick="onClick"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_label"/>
</androidx.constraintlayout.widget.ConstraintLayout>