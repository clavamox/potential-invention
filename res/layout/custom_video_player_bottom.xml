<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/ll_bottom_container"
        android:background="@drawable/player_mask_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/iv_play"
            android:padding="12dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/selector_bot_play_button"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_curr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:layout_gravity="center_vertical"
            android:id="@+id/seekBar"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:maxHeight="2dp"
            android:max="1000"
            android:progressDrawable="@drawable/seek_progress"
            android:minHeight="2dp"
            android:thumb="@drawable/seek_thumb"
            android:thumbOffset="0dp"
            android:layout_weight="1"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_clarity"
            android:paddingLeft="1dp"
            android:paddingRight="4dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="超清"
            android:paddingStart="1dp"
            android:paddingEnd="4dp"/>
        <ImageView
            android:id="@+id/iv_fullscreen"
            android:padding="12dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/selector_full_screen_button"/>
    </LinearLayout>
    <ProgressBar
        android:layout_gravity="bottom"
        android:id="@+id/pb_bottom_progress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:max="1000"
        android:progressDrawable="@drawable/progress_bar_style"
        style="?android:attr/progressBarStyleHorizontal"/>
</FrameLayout>