<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bga_pp_activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.bingoogolapple.photopicker.widget.BGAHackyViewPager
        android:id="@+id/hvp_photo_picker_preview_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
    <RelativeLayout
        android:id="@+id/rl_photo_picker_preview_choose"
        android:background="@color/bga_pp_preview_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true">
        <TextView
            android:textColor="@color/bga_pp_common_textColor"
            android:gravity="center_vertical"
            android:id="@+id/tv_photo_picker_preview_choose"
            android:paddingLeft="@dimen/bga_pp_size_level4"
            android:paddingRight="@dimen/bga_pp_size_level4"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/bga_pp_choose"
            android:drawableLeft="@mipmap/bga_pp_ic_cb_normal"
            android:drawablePadding="@dimen/bga_pp_size_level1"
            android:layout_alignParentRight="true"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>
    </RelativeLayout>
</RelativeLayout>